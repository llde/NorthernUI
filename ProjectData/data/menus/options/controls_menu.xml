                  <copy src="ControlsMenu" trait="user0" /><eq>2</eq>
                  <and  src="ControlsMenu" trait="user4" />
               </or>
				</visible>
            
            <_strings_1><copy src="strings()" trait="_exit" /></_strings_1>
            <_strings_2><copy src="strings()" trait="_return" /></_strings_2>
